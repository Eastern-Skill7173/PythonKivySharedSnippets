#:kivy 2.1.0
<NavigationRailItem>:
    orientation: "vertical"
    spacing: "5dp"
    size_hint_y: None
    height: root.minimum_height
    selected: root == root.parent.selected_nav_item
    MDIcon:
        id: md_icon
        icon: root.icon
        size_hint: (None, None)
        size: (self.font_size, self.font_size)
        pos_hint: {"center_x": .5}
    MDLabel:
        id: md_label
        text: root.text
        adaptive_height: True
        halign: "center"
        opacity: 0
        pos_hint: {"center_x": .5}
<RailItemHolder>:
    cols: 1
    spacing: "10dp"
    padding: (0, "10dp", 0, "10dp")
    size_hint_x: None
    canvas.before:
        Color:
            rgba: app.theme_cls.bg_light
        Rectangle:
            pos: root.pos
            size: root.size
<NavigationRail>:
    RailItemHolder:
        id: rail_item_holder
        width: root.rail_width
    ScreenManager:
        id: screen_manager
        transition: root.transition

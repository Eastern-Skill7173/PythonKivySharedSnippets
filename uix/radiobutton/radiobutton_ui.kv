#:kivy 2.1.0
<RadioButton>:
    size_hint_y: None
    height: self.minimum_height
    spacing: "5dp"
    active: _check_box.active
    CheckBox:
        id: _check_box
        group: root.group
        active: root.active
        allow_no_selection: False
        size_hint: (None, None)
        size: ("48dp", "48dp")
    Label:
        markup: True
        text: "[ref=text_bind]{}[/ref]".format(root.text)
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        pos_hint: {"center_y": .5}
        on_ref_press:
            if args[1] == "text_bind" and root.get_active_group_member(root.group) != root: \
            _check_box.active = not _check_box.active

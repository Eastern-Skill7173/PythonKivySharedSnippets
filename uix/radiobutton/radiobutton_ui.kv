#:kivy 2.1.0
<RadioButton>:
    size_hint_y: None
    height: root.minimum_height
    spacing: "5dp"
    active: _check_box.active
    allow_no_selection: False
    CheckBox:
        id: _check_box
        group: root.group
        active: root.active
        allow_no_selection: root.allow_no_selection
        pos_hint: {"center_y": .5}
        size_hint: (None, None)
        size: ("48dp", "48dp")
    Label:
        markup: True
        text: f"[ref=text_bind]{root.text}[/ref]"
        text_size: self.width, None
        size_hint_y: None
        height: self.texture_size[1]
        pos_hint: {"center_y": .5}
        on_ref_press:
            if args[1] == "text_bind" and root.get_active_group_member(root.group) != root: \
            _check_box.active = not _check_box.active
